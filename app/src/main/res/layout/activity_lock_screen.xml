<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".lockscreen.LockScreenActivity">

    <TextView
        android:id="@+id/textview_lock_screen_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="あう"
        android:textColor="@color/colorWhite"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_lock_screen_kanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/textview_lock_screen_word"
        app:layout_constraintStart_toStartOf="@+id/textview_lock_screen_word"
        app:layout_constraintTop_toBottomOf="@+id/textview_lock_screen_word"
        tools:text="[会う]" />

    <TextView
        android:id="@+id/textview_lock_screen_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/textview_lock_screen_kanji"
        app:layout_constraintStart_toStartOf="@+id/textview_lock_screen_kanji"
        app:layout_constraintTop_toBottomOf="@+id/textview_lock_screen_kanji"
        tools:text="[동사]만나다, 대면하다;면회하다, 우연히 ..." />
</androidx.constraintlayout.widget.ConstraintLayout>