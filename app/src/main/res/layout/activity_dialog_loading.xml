<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".dialog.DialogLoading">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_repeatMode="restart"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="2"
        app:lottie_fileName="@string/file_anim_loading_letter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_loading_text"
        android:textStyle="bold"
        android:textColor="@color/lolColorSet1_1"
        android:letterSpacing="0.7  "
        app:layout_constraintTop_toBottomOf="@+id/lottie_loading"
        app:layout_constraintStart_toStartOf="@+id/lottie_loading"
        app:layout_constraintEnd_toEndOf="@+id/lottie_loading"/>

</androidx.constraintlayout.widget.ConstraintLayout>